{% extends "base.html.twig" %}

{% block title %}Roles{% endblock %}

{% block top_navigation %}
    <li class="nav-item">
        <a class="nav-link" href="{{ '/' }}"><i class="fa fa-home"></i>&nbsp;Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ '/task' }}"><i class="fa fa-list"></i>&nbsp;Tasks</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ '/user' }}"><i class="fa fa-users"></i>&nbsp;Users</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
    </li>
{% endblock top_navigation %}

{% block body %}
    <div class="container">
        <h1 style="margin: 30px 0;">Roles list</h1>

        <a class="btn btn-outline-dark" href="{{ '/role/new' }}" role="button">
            <i class="fa fa-plus-square-o"></i>&nbsp;Add role
        </a>
        <br><br>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    {#<th scope="col">Nested roles</th>#}
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for role in pagination.result %}
                <tr>
                    <th scope="row">{{ role.id }}</th>
                    <td>{{ role.name }}</td>
                    {#<td>{{ role.roles }}</td>#}
                    <td>
                        <a class="btn btn-outline-dark" href="{{ '/role/edit/' ~ role.id }}" role="button">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a class="btn btn-outline-danger" href="{{ '/role/delete/' ~ role.id }}" role="button">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <nav aria-label="pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                {% for item in 1..pagination.countOfPages %}
                <li class="page-item{{ item == pagination.currentPage ? ' active' : '' }}">
                    <a class="page-link"
                       href="?page={{ item }}">
                        {{ item }}
                    </a>
                </li>
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock body %}
